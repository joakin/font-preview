{
  "name": "font-compare",
  "version": "0.0.0",
  "description": "Font comparer (focused on monospaced fonts)",
  "main": "index.js",
  "scripts": {
    "serve": "./node_modules/.bin/livereloadx -s ./static/",
    "build-js": "browserify browser.js -o static/bundle.js",
    "build-css": "stylus -c styles/style.styl -o static/",
    "build": "npm run build-js & npm run build-css",
    "watch-js": "watchify browser.js -o static/bundle.js --debug --verbose",
    "watch-css": "stylus -w styles/style.styl -o static/",
    "watch": "npm run watch-js & npm run watch-css & npm-watch & npm run serve",
    "test": "node test/*.js"
  },
  "watch": {
    "test": "{static,test}/*.js"
  },
  "author": "Joaquin Oltra",
  "license": "MIT",
  "browserify": {
    "transform": [
      [ "reactify", { "extension": "js", "es6": true } ],
      "brfs"
    ]
  },
  "dependencies": {
    "react": "0.11",
    "css-face-string": "*"
  },
  "devDependencies": {
    "livereloadx": "^0.3.5",
    "brfs": "^1.1.1",
    "npm-watch": "*",
    "reactify": "^0.14",
    "tape": "^2.13.2"
  }
}
